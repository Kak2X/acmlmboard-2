{% macro input(name, value = "", type = "text", size = 20) %}
<input type="{{ type }}" name="{{ name }}" value="{{ value|e }}" size="{{ size }}" />
{% endmacro %}

{% macro input_select(name, options, selected = "") %}
<select name="{{ name }}">
{% for value, label in options %}
	<option value="{{ value }}"{% if value == selected %} selected="selected"{% endif %}>{{ label }}</option>
{% endfor %}
</select>
{% endmacro %}

{% macro input_option_list(name, options, selected) %}
{% for value, label in options %}
	<label for="{{ name }}_{{ loop.index }}"><input type="radio" name="{{ name }}" value="{{ value }}" id="{{ name }}_{{ loop.index }}"{% if value == selected %} checked="checked"{% endif %} />{{ label }}</label>
{% endfor %}
{% endmacro %}